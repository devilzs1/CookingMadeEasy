<h1 class="pb-4">Explore Random Recipe</h1>

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-5 g-2 g-lg-3">
  <% if(recipe !=='') { %>
  <a href="/recipe/<%= recipe._id %>" class="col text-center category__link">
    <div class="category__img category__img--large shadow">
      <img
        src="/uploads/<%= recipe.image %>"
        alt="<%= recipe.name %>"
        loading="lazy"
      />
    </div>
    <div class="pt-1 mb-3"><%= recipe.name %></div>
  </a>
  <% } else{ %>
  <p class="display-6 w-100 text-center">
    No recipes found! Feel free to post one.
  </p>
  <% } %>
</div>
